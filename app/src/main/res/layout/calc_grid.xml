<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_gravity="fill"
    android:columnCount="2"
    android:gravity="center_vertical|end"
    android:rowCount="6">

    <!-- Row 0: Remaining filament display -->
    <TextView
        android:id="@+id/remaining_filament_lbl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="3"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical|end"
        android:inputType="none"
        android:maxLines="1"
        android:text="@string/remaining_filament_label" />

    <TextView
        android:id="@+id/txt_remaining_filament"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="2"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical|start"
        android:inputType="none"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- Row 1: Core diameter -->
    <TextView
        android:id="@+id/core_diameter_lbl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="3"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical|end"
        android:inputType="none"
        android:maxLines="1"
        android:text="@string/core_diameter_label" />

    <EditText
        android:id="@+id/core_diameter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="2"
        android:autoSizeTextType="uniform"
        android:autofillHints=""
        android:gravity="center_vertical|start"
        android:hint="@string/core_diameter_hint"
        android:inputType="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:editable="false"
        android:enabled="true"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- Row 2: Full radius -->
    <TextView
        android:id="@+id/full_radius_lbl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="3"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical|end"
        android:inputType="none"
        android:maxLines="1"
        android:text="@string/full_radius_label" />

    <EditText
        android:id="@+id/full_radius"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="2"
        android:autoSizeTextType="uniform"
        android:autofillHints=""
        android:gravity="center_vertical|start"
        android:hint="@string/full_radius_hint"
        android:inputType="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:editable="false"
        android:enabled="true"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- Row 3: Empty radius -->
    <TextView
        android:id="@+id/empty_radius_lbl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="3"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical|end"
        android:inputType="none"
        android:maxLines="1"
        android:text="@string/empty_radius_label" />

    <EditText
        android:id="@+id/empty_radius"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="2"
        android:autoSizeTextType="uniform"
        android:autofillHints=""
        android:gravity="center_vertical|start"
        android:hint="@string/empty_radius_hint"
        android:inputType="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:editable="false"
        android:enabled="true"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- Row 4: Slot width -->
    <TextView
        android:id="@+id/slot_width_lbl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="4"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="3"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical|end"
        android:inputType="none"
        android:maxLines="1"
        android:text="@string/slot_width_label" />

    <EditText
        android:id="@+id/slot_width"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="4"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="2"
        android:autoSizeTextType="uniform"
        android:autofillHints=""
        android:gravity="center_vertical|start"
        android:hint="@string/slot_width_hint"
        android:inputType="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:editable="false"
        android:enabled="true"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- Row 5: Filament diameter -->
    <TextView
        android:id="@+id/filament_diameter_lbl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="5"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_columnWeight="3"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical|end"
        android:inputType="none"
        android:maxLines="1"
        android:text="@string/filament_diameter_label" />

    <EditText
        android:id="@+id/filament_diameter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="5"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_columnSpan="1"
        android:layout_columnWeight="2"
        android:autoSizeTextType="uniform"
        android:autofillHints=""
        android:gravity="center_vertical|start"
        android:hint="@string/filament_diameter_hint"
        android:inputType="none"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:editable="false"
        android:enabled="true"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

</GridLayout>