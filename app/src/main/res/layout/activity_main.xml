<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:columnCount="1"
        android:rowCount="2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:gravity="center_vertical|end"
            android:src="@drawable/illustration" />

        <GridLayout
            android:id="@+id/calc_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:columnCount="2"
            android:gravity="center_vertical|end"
            android:rowCount="6">

            <!--        Row 1       -->
            <TextView
                android:id="@+id/core_diameter_lbl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_columnWeight="3"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|end"
                android:inputType="none"
                android:maxLines="1"
                android:text="Hollow core diameter (mm)" />


            <EditText
                android:id="@+id/core_diameter"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="2"
                android:autoSizeTextType="uniform"
                android:autofillHints=""
                android:gravity="center_vertical|start"
                android:hint="Enter hollow core diameter (mm)"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="16dp" />

            <!--        Row 2       -->
            <TextView
                android:id="@+id/full_radius_lbl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_columnWeight="3"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|end"
                android:inputType="none"
                android:maxLines="1"
                android:text="Full radial distance (mm)" />


            <EditText
                android:id="@+id/full_radius"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="2"
                android:autoSizeTextType="uniform"
                android:autofillHints=""
                android:gravity="center_vertical|start"
                android:hint="Enter full radial distance (mm)"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="16dp" />

            <!--        Row 3       -->
            <TextView
                android:id="@+id/empty_radius_lbl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_columnWeight="3"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|end"
                android:inputType="none"
                android:maxLines="1"
                android:text="Empty radial distance (mm)" />


            <EditText
                android:id="@+id/empty_radius"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="2"
                android:autoSizeTextType="uniform"
                android:autofillHints=""
                android:gravity="center_vertical|start"
                android:hint="Enter empty radial distance (mm)"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="16dp" />

            <!--        Row 4       -->
            <TextView
                android:id="@+id/slot_width_lbl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="4"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_columnWeight="3"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|end"
                android:inputType="none"
                android:maxLines="1"
                android:text="Wall-to-wall width (mm)" />


            <EditText
                android:id="@+id/slot_width"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="4"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="2"
                android:autoSizeTextType="uniform"
                android:autofillHints=""
                android:gravity="center_vertical|start"
                android:hint="Enter wall-to-wall width (mm)"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="16dp" />


            <!--        Row 5       -->

            <TextView
                android:id="@+id/filament_diameter_lbl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="5"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_columnWeight="3"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|end"
                android:inputType="none"
                android:maxLines="1"
                android:text="Filament diameter (mm)" />

            <EditText
                android:id="@+id/filament_diameter"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="5"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="2"
                android:autoSizeTextType="uniform"
                android:autofillHints=""
                android:gravity="center_vertical|start"
                android:hint="Enter filament diameter (mm)"
                android:inputType="number"
                android:maxLines="1"
                android:paddingStart="16dp" />

            <!--        Row 0       -->

            <TextView
                android:id="@+id/remaining_filament_lbl"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|end"
                android:inputType="none"
                android:maxLines="1"
                android:text="Remaining filament (meter)" />

            <TextView
                android:id="@+id/txt_remaining_filament"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_columnWeight="1"
                android:autoSizeTextType="uniform"
                android:gravity="center_vertical|end"
                android:inputType="none"
                android:maxLines="1" />


        </GridLayout>

    </GridLayout>

</ScrollView>